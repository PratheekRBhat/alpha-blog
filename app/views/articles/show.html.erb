<div class="container">
  <h1 class="text-center"><%= @article.title %></h1>

  <div class="row justify-content-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow bg-white rounded">
        <div class="card-header font-italic">
          by Pratheek Bhat
        </div>
        <div class="card-body">
          <div class="card-text text-justify"><%= simple_format(@article.description, length: 100) %></div>
          <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-dark" %>
          <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@article.created_at) %> ago, Edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center my-4">
    <%= link_to '[Return to articles listing]', articles_path, class: " btn btn-outline-dark font-weight-bold" %>
  </div>
</div>