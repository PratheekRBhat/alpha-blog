<div class="container">
  <% if @article.errors.any? %>
    <h3>The following errors prevented the article from being created:-</h3>

    <ul>
      <% @article.errors.full_messages.each do |message| %> 
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-charcoal rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-white" %> <br/>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control bg-gray shadow rounded", placeholder: "Title of the article..."%>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label text-white" %> <br>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control bg-gray shadow rounded", placeholder: "Description of the article..." %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-outline-light btn-lg"%>
        </div>
      <% end %>
    </div>

    <%= link_to '[Cancel and return to articles listing]', articles_path, class: " btn btn-outline-dark font-weight-bold" %>
  </div>
</div>